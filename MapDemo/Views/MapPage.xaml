<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:BeThere.Controls"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:loc="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
             x:Class="BeThere.Views.MapPage">
    <StackLayout>
        <SearchBar x:Name="mapSearchBar" 
                   Placeholder="Search for a location"
                   SearchButtonPressed="OnSearchButtonPressed">
        </SearchBar>
    <maps:Map x:Name="mappy" IsShowingUser="True" IsTrafficEnabled="True" MapType="Street">
    </maps:Map>
    </StackLayout>
</ContentPage>
